---
import Layout from "@/layouts/Layout.astro";
import CategoryHeader from "@/components/CategoryHeader.astro";
import { transportCategories } from "@/content/transportCategories";
import transportwand from "@/assets/transportwand_header.jpg";
const pageLanguage = Astro.locals.language;
const textContent = {
  title: {
    de: "Nachhaltige Lösungen für Rollcontainer",
    en: "Reusable Solutions for Roll Cage Trolleys",
  },
  text: {
    de: "Lorem ipsum dolor sit amet. Sit molestias esse et voluptas ducimus est nihil sunt et velit nostrum aut blanditiis tenetur. Est animi sunt ex quae ipsam et distinctio impedit ea commodi necessitatibus quo explicabo soluta sit cumque exercitationem et ipsum doloremque.",
    en: "Lorem ipsum dolor sit amet. Sit molestias esse et voluptas ducimus est nihil sunt et velit nostrum aut blanditiis tenetur. Est animi sunt ex quae ipsam et distinctio impedit ea commodi necessitatibus quo explicabo soluta sit cumque exercitationem et ipsum doloremque.",
  },
};
---

<Layout>
  <section style={`--bg: url(${transportwand.src})`}>
    <div class="container">
      <CategoryHeader
        categories={transportCategories}
        pageLanguage={pageLanguage}
        textContent={textContent}
      />
    </div>
  </section>
</Layout>
<style>
  section {
    background-image: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.7),
        var(--verydarkgray)
      ),
      var(--bg);
    background-size: cover;
    background-position: left;
    padding-top: 100px;
    position: relative;
    min-height: 50vh;
  }
</style>
