---
import astroLogo from "../assets/astro.svg";
import background from "../assets/feuchter_gmbh_header.jpg";
import Button from "../components/Button.astro";
import Circles from "../assets/Circles.svg";
import Scribble from "../assets/feuchter_gmbh_header.jpg";
const { language } = Astro.props;
let heading = "Professionelle Textil- & Bekleidungslösungen";
let subtitle = "für Unternehmen, Militär und Behörden";
let introText = `Seit 1957 sind wir einer der führenden Produzenten von Bekleidung für Armeen, Behörden und Unternehmen weltweit. Vertrauen Sie auf unsere langjährige Erfahrung in den Bereichen Entwicklung, Produktion und Lieferung. Egal ob Sie einen Produzenten für Ihren eigenen Onlineshop oder ihr Geschäft suchen oder Sie Ihre Mitarbeiter neu ausstatten möchten - bei uns sind Sie in besten Händen.`;
if (language == "en") {
  heading = "Elegant saxophone music for weddings, events, and more.";
  introText = `Jakob Matuschek was born in 1995 in Passau and began his musical education at the municipal music school there, studying piano, saxophone, and percussion. He completed his studies at the Vocational School for Music in Plattling in 2016, graduating as a state-certified ensemble director with a major in saxophone.`;
}
---

<section>
  <img
    src={Scribble.src}
    alt=""
    class="scribble"
    fetchpriority="high"
    loading="eager"
  />
  <div class="container">
    <img
      src={Circles.src}
      alt=""
      class="circles-svg"
      fetchpriority="high"
      loading="eager"
    />
    <div class="hero-container">
      <h1 class="hero-heading animatable">
        {heading}
      </h1>
      <p class="subtitle animatable">{subtitle}</p>
      <p class="hero-paragraph">
        {introText}
      </p>
      <div class="button-wrapper hero-button-wrapper">
        <Button
          linkText="Jetzt anfragen"
          target="#kontakt"
          class="hero-button-1"
        />
        <Button
          linkText="Referenzen"
          target="#rezensionen"
          class="hero-button-2"
        />
      </div>
    </div>
  </div>
</section>
<style>
  section {
    display: flex;
    flex-direction: row-reverse;
    justify-content: space-between;
    align-items: center;
    position: relative;
    min-height: 100vh;
    margin: 0 auto;
    gap: 50px;
    padding-top: 100px;
    background: rgba(0, 0, 0, 0.8);
  }
  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 50px;
    @media screen and (max-width: 820px) {
      flex-direction: column-reverse;
      padding: 0 20px;
    }
    @media screen and (max-width: 1024px) and (min-width: 821px) {
      flex-direction: column-reverse;
      padding: 0 70px;
    }
  }
  h1 {
    color: var(--lightgray);
    font-weight: 900;
    font-size: 3.2rem;
    letter-spacing: -1px;
    line-height: 2.3rem;
    text-align: center;
    font-family: "Afacadflux", sans-serif;
    text-transform: uppercase;
    margin: 0;
    @media screen and (max-width: 820px) {
      font-size: 2rem;
    }
  }
  p {
    color: var(--lightgray);
    max-width: 600px;
    line-height: 1.5rem;
    font-weight: 300;
    font-size: 0.9rem;
    text-align: center;
  }
  .hero-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    gap: 5px;
    padding: 50px 0;
  }
  .subtitle {
    text-align: center;
    margin: 0;
    margin-top: 10px;
    font-weight: 400;
    font-size: 1.2rem;
    letter-spacing: 4px;
    margin-bottom: 30px;
    font-family: "Afacadflux", sans-serif;
    text-transform: uppercase;
    color: var(--sand);
    font-style: italic;
  }
  img {
    width: 80%;
    height: auto;
    object-fit: cover;
    border-radius: 50px;
    @media screen and (max-width: 820px) {
      width: 90%;
    }
  }
  .scribble {
    width: 100%;
    height: 100%;
    border-radius: 0;
    position: absolute;
    top: 0;
    left: 0;
    object-fit: cover;
    z-index: -1;
    opacity: 1;
  }
  .circles-svg {
    position: absolute;
    z-index: -1;
    width: 80%;
    object-fit: contain;
    top: 0;
    filter: blur(100px);
    opacity: 0.05;
  }
</style>
