---
import Button from "../components/Button.astro";
import Circles from "../assets/Circles.svg";
import Scribble from "../assets/feuchter_gmbh_header.webp";
import { buttonTranslations } from "@/content/translations";

const { language } = Astro.props;

let heading = "Professionelle Textil- & Bekleidungslösungen seit 1957";
let subtitle = "für Unternehmen, Militär und Behörden";
let introText = `Seit 1957 sind wir einer der führenden Produzenten von Bekleidung für Armeen, Behörden und Unternehmen weltweit.`;
if (language == "en") {
  heading = "Professional Textile & Apparel Solutions since 1957";
  subtitle = "For Businesses, Military, and Government Agencies";
  introText = `Since 1957, we have been one of the leading producers of clothing for armies, government agencies, and businesses worldwide.`;
}
---

<section>
  <img
    src={Scribble.src}
    alt=""
    class="scribble"
    fetchpriority="high"
    loading="eager"
  />
  <div class="container">
    <img
      src={Circles.src}
      alt=""
      class="circles-svg"
      fetchpriority="high"
      loading="eager"
    />
    <div class="hero-container">
      <h1 class="hero-heading animatable">
        {heading}
      </h1>
      <p class="subtitle animatable">{subtitle}</p>
      <p class="hero-paragraph" set:html={introText} />
      <div class="button-wrapper hero-button-wrapper">
        <Button
          linkText={buttonTranslations("contact", language)}
          target=`/${language}/contact`
          class="hero-button-1"
          variant="primary"
        />
        <Button
          linkText={buttonTranslations("projects", language)}
          target=`/${language}/projects`
          class="hero-button-2"
          variant="secondary"
        />
      </div>
    </div>
  </div>
</section>
<style>
  section {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    position: relative;
    min-height: 70vh;
    margin: 0 auto;
    gap: 50px;
    padding-top: 100px;
    padding-bottom: 30px;
    background-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.5),
      rgba(0, 0, 0, 0.7),
      var(--verydarkgray)
    );
    @media screen and (max-width: 1028px) {
      padding-top: 20px;
      padding-bottom: 50px;
      min-height: 90vh;
      background-image: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.7),
        rgba(0, 0, 0, 0.7),
        var(--verydarkgray)
      );
    }
  }
  .container {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    gap: 50px;
    height: 100%;
    @media screen and (max-width: 820px) {
      flex-direction: column-reverse;
      padding: 0 20px;
      margin: 0;
    }
    @media screen and (max-width: 1028px) and (min-width: 821px) {
      flex-direction: column-reverse;
      padding: 0 70px;
    }
  }
  h1 {
    color: var(--lightgray);

    font-size: 2rem;
    line-height: 2rem;
    max-width: 75%;
    letter-spacing: -1px;
    text-align: center;
    font-family: "Afacadflux", sans-serif;
    text-transform: uppercase;
    margin: 0;
    @media screen and (max-width: 820px) {
      font-size: 1.3rem !important;
      text-align: left;
      max-width: 100%;
    }
  }
  p {
    color: var(--lightgray);
    font-family: "Inter", sans-serif;
    max-width: 800px;
    line-height: 1.6rem;
    font-weight: 500;
    font-size: 1.2rem;
    letter-spacing: 90%;
    text-align: center;
    @media screen and (max-width: 820px) {
      text-align: left;
      font-size: 1rem;
    }
  }
  .hero-container {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    width: 100%;
    gap: 5px;
    padding: 50px 0;
    @media screen and (max-width: 820px) {
      gap: 0px;
    }
  }
  .subtitle {
    text-align: left;
    margin: 0;
    margin-top: 10px;
    font-weight: 600;
    font-size: 1.2rem;
    letter-spacing: 4px;
    margin-bottom: 30px;
    line-height: 85%;
    font-family: "Afacadflux", sans-serif;
    text-transform: uppercase;
    color: var(--sand);
    font-style: italic;
    @media screen and (max-width: 820px) {
      text-align: left;
      margin-top: 0px;
      width: 100%;
    }
  }
  img {
    width: 80%;
    height: auto;
    object-fit: cover;
    border-radius: 50px;
    @media screen and (max-width: 820px) {
      width: 90%;
    }
  }
  .scribble {
    width: 100%;
    height: 100%;
    border-radius: 0;
    position: absolute;
    top: 0;
    left: 0;
    object-fit: cover;
    z-index: -1;
    opacity: 1;
  }
  .circles-svg {
    position: absolute;
    z-index: -1;
    width: 80%;
    object-fit: contain;
    top: 0;
    filter: blur(100px);
    opacity: 0.05;
  }
</style>
