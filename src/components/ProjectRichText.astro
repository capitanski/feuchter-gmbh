---
const { richText } = Astro.props;
---

<section>
  <div class="container">
    <h2>Projektbeschreibung</h2>
    <div class="rich-text" set:html={richText} />
  </div>
</section>

<style>
  section {
    padding: 50px 0;
    @media screen and (max-width: 820px) {
      padding: 50px 20px;
    }
  }
  .container {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 20px;
    width: 100%;
  }
  h2 {
    font-size: 2.5rem;
  }
</style>
