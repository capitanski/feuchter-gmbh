---
const {
  categories,
  products,
  pageLanguage,
  searchCategory,
  links,
  headerImage,
  heading,
  subtitle,
  introText,
} = Astro.props;
---

<section>
  <img src={headerImage.src} alt="" class="header-image" />
  <div class="container">
    <div class="intro">
      <div class="headline-and-subtitle">
        <h1 class="animatable">
          {heading}
        </h1>
        <p class="subtitle">
          {subtitle}
        </p>
      </div>
      <p class="intro-text">
        {introText}
      </p>
    </div>

    <div class="filter-link-container">
      {
        links.map((link) => {
          return (
            <a
              href={link.href}
              class={
                link.searchCategory === searchCategory
                  ? "active filter-link"
                  : "filter-link"
              }
            >
              {link.linkText[pageLanguage]}
            </a>
          );
        })
      }
    </div>

    {
      categories.map((category) => {
        return (
          <>
            <h2>{category.value}</h2>
            <div class="product-grid">
              {products
                .filter(
                  (product) =>
                    product.category.key == category.key &&
                    product.category.overall == searchCategory
                )
                .map((p) => {
                  return (
                    <div class="product-grid-item animatable">
                      <img src={p.mainImage} alt="" />
                      <div>
                        {p.originalTl ? <span>Original TL</span> : ""}
                        {p.individual ? <span>Individualisierbar</span> : ""}
                        <p class="product-title">{p.title[pageLanguage]}</p>
                        <details class="rich-text-dark">
                          <summary>Technische Daten</summary>
                          <img src={p.mainImage} alt="" />
                          <p>{p.description[pageLanguage]}</p>
                          <small set:html={p.technicalData[pageLanguage]} />
                        </details>
                      </div>
                    </div>
                  );
                })}
            </div>
          </>
        );
      })
    }
  </div>
</section>
<style>
  section {
    background: rgba(0, 0, 0, 0.9);
    padding: 150px 0;
    position: relative;
    min-height: 100vh;
  }
  .header-image {
    width: 100%;
    height: 100%;
    min-height: 100vh;
    border-radius: 0;
    position: fixed;
    top: 0;
    left: 0;
    object-fit: cover;
    z-index: -1;
    opacity: 1;
  }
  .container {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
  }
  h2 {
    color: var(--sand);
    margin-bottom: 30px;
    margin-top: 30px;
    font-size: 1.8rem;
  }
  .product-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 5px;
  }
  .product-grid-item {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 10px;
    cursor: pointer;
  }
  .product-grid-item:hover {
    gap: 15px;
  }
  .product-grid-item img {
    width: 75px;
    height: 75px;
    object-fit: cover;
    border-radius: 15px;
  }
  .product-title {
    font-family: "Afacadflux", sans-serif;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--lightgray);
    font-weight: 700;
    margin: 0 !important;
    font-size: 1.2rem;
  }
  .product-grid-item span {
    color: var(--sand);
    font-weight: 200;
    font-size: 0.9rem;
    font-family: "Afacadflux", sans-serif;
    text-transform: uppercase;
  }
  details {
    color: var(--lightgray) !important;
    font-family: "Inter", sans-serif !important;
    font-size: 0.7rem;
  }
  .filter-link {
    color: var(--sand);
    text-decoration: none;
    padding: 5px 15px;
    box-shadow:
      rgba(0, 0, 0, 0.25) 0px 25px 50px -12px,
      0 0 0 0.35px var(--sand) !important;
    font-size: 0.7rem;
    font-weight: 400;
    border-radius: 15px;
  }
  .active {
    color: var(--verydarkgray) !important;
    background: var(--sand) !important;
  }
  .filter-link-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    gap: 10px;
  }
  .subtitle {
    color: var(--sand);
    font-family: "Afacadflux", sans-serif;
    text-transform: uppercase;
    margin: 0;
    font-size: 1.3rem;
  }
  h1 {
    font-family: "Afacadflux", sans-serif;
    text-transform: uppercase;
    margin: 0;
    font-size: 2rem;
    line-height: 2rem;
    font-weight: 700;
  }
  .intro-text {
    margin: 0;
    color: var(--lightgray);
    font-size: 0.8rem;
  }
  .intro {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 10px;
    max-width: 60%;
    padding: 0 0 50px 0;
  }
</style>
