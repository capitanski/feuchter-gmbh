<div class="container">
    <div class="form-wrapper">
        <h2 class="animatable">
            Ihre Vision ist nur noch einen Klick entfernt
        </h2>
        <p class="subtitle animatable">Wir freuen uns, von Ihnen zu hören</p>
        <form method="POST" action="/api/kontakt">
            <div>
                <label for="name">Name:</label>
                <input name="name" type="text" required />
            </div>
            <div>
                <label for="email">E-Mail:</label>
                <input name="email" type="email" required />
            </div>
            <div>
                <label for="message">Nachricht:</label>
                <textarea name="message" required></textarea>
            </div>

            <button type="submit">Senden</button>
        </form>
    </div>
    <div class="contact-data">
        <p>+49 123456789</p>
        <p>office@feuchter.com</p>
        <p>Feuchter GmbH</p>
        <p>Innbruckstraße 10</p>
        <p>4780 Schärding AT</p>
    </div>
</div>

<style>
    section {
        background: var(--verydarkgray);
    }
    h2 {
        background: linear-gradient(135deg, var(--lightgray), var(--sand));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-transform: uppercase;
    }
    .subtitle {
        text-align: left;
        margin: 0;
        margin-top: 10px;
        font-weight: 700;
        letter-spacing: 4px;
        margin-bottom: 30px;
        line-height: 85%;
        font-family: "Afacadflux", sans-serif;
        text-transform: uppercase;
        color: var(--sand);

        @media screen and (max-width: 820px) {
            text-align: left;
            margin-top: 0px;
            width: 100%;
        }
    }
    .container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 55px;
        padding-top: 50px;
        height: auto !important;
        @media screen and (max-width: 1028px) {
            grid-template-columns: 1fr;
            padding: 20px 20px;
        }
    }
    .form-wrapper div {
        width: 100%;
    }
    .form-wrapper {
        max-width: 100%;
    }
    form {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 20px;
        padding: 10px 0;
        width: 100%;
    }
    form div {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 5px;
        width: 100%;
    }
    label {
        color: var(--sand);
    }
    input,
    textarea {
        width: 100%;
        background: var(--verydarkgray);
        color: var(--lightgray);
        border: none;
        padding: 10px;
        border-radius: 5px;
        z-index: 1;
        box-shadow:
            rgba(0, 0, 0, 0.25) 0px 25px 50px -12px,
            0 0 0 0.15px var(--lightgray);
    }
    button {
        cursor: pointer;
        color: var(--verydarkgray);
        background-color: var(--sand);
        font-family: "peridot-pe-variable", sans-serif !important;
        font-variation-settings:
            "ital" 0,
            "wdth" 100,
            "wght" 700;
        border: none;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 15px 20px;
        text-decoration: none;
        border-radius: 10px;
        font-size: 0.6rem;
        letter-spacing: 4px;
        min-width: 200px;
        font-weight: 600;
        text-transform: uppercase;
        background-size: cover;
        background-position: center;
        transition: all 0.3s cubic-bezier(0.405, 0.935, 0.625, 0.895);
        box-shadow:
            rgba(0, 0, 0, 0.25) 0px 25px 50px -12px,
            0 0 0 0.35px var(--sand);

        @media screen and (max-width: 820px) {
            min-width: 150px;
        }
    }
    .contact-data {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 5px;
        align-self: self-start;
        border-left: 1px solid var(--sand);
        padding-left: 50px;
        height: 100%;
        @media screen and (max-width: 820px) {
            border: none;
            padding-left: 0;
        }
    }
    .contact-data p {
        font-family: "peridot-pe-variable", sans-serif !important;
        font-variation-settings:
            "ital" 0,
            "wdth" 100,
            "wght" 400;
        list-style-type: none;
        color: var(--lightgray) !important;

        letter-spacing: 3px;
        font-size: 0.9rem;
        margin: 0 !important;
        @media screen and (max-width: 820px) {
            text-align: left;
        }
    }
</style>
