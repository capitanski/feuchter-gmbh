---
const { heading, subtitle, pageLanguage } = Astro.props;
---

<div class="container">
    <div class="form-wrapper">
        <h2 class="animatable">
            {heading}
        </h2>
        <p class="subtitle animatable">{subtitle}</p>
        <form id="kontaktForm">
            <div>
                <label for="name">Name:</label>
                <input name="name" type="text" required />
            </div>
            <div>
                <label for="email">E-Mail:</label>
                <input name="email" type="email" required />
            </div>
            <div>
                <label for="message">Nachricht:</label>
                <textarea name="message" required></textarea>
            </div>

            <button type="submit" id="sendButton">Senden</button>
            <p id="responseText"></p>
        </form>
    </div>
    <div class="contact-data">
        <p>+49 123456789</p>
        <p>office@feuchter.com</p>
        <p>Feuchter GmbH</p>
        <p>Innbruckstra√üe 10</p>
        <p>4780 Sch√§rding AT</p>
    </div>
</div>

<script type="module">
    const form = document.getElementById("kontaktForm");
    const responseText = document.getElementById("responseText");
    const sendButton = document.getElementById("sendButton");

    form.addEventListener("submit", async (e) => {
        e.preventDefault(); // verhindert Page Reload
        console.log("JS √ºbernimmt");
        const formData = new FormData(form);

        try {
            sendButton.innerText = "Bitte warten";
            sendButton.setAttribute("disabled", true);
            const res = await fetch("/api/contact", {
                method: "POST",
                body: formData,
            });

            const text = await res.text();

            if (res.ok) {
                sendButton.innerText = "Senden";
                sendButton.removeAttribute("disabled");
                responseText.textContent = "‚úÖ Nachricht erfolgreich gesendet!";
                form.reset();
            } else {
                responseText.textContent = "‚ùå Fehler: " + text;
                sendButton.innerText = "Senden";
                sendButton.removeAttribute("disabled");
            }
        } catch (err) {
            sendButton.innerText = "Senden";
            sendButton.removeAttribute("disabled");
            responseText.textContent = "üí• Netzwerkfehler: " + err.message;
        }
    });
</script>

<style>
    #responseText {
        position: fixed;
        bottom: 20px;
        left: 20px;
        width: 400px;
        height: 150px;
        padding: 35px;
        background: var(--sand);
        color: var(--verydarkgray);
        text-align: left;
        border-radius: 25px;
        z-index: 5;
    }
    section {
        background: var(--verydarkgray);
    }
    h2 {
        background: linear-gradient(135deg, var(--lightgray), var(--sand));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-transform: uppercase;
    }
    .subtitle {
        text-align: left;
        margin: 0;
        margin-top: 10px;
        font-weight: 700;
        letter-spacing: 4px;
        margin-bottom: 30px;
        line-height: 85%;
        font-family: "Afacadflux", sans-serif;
        text-transform: uppercase;
        color: var(--sand);

        @media screen and (max-width: 820px) {
            text-align: left;
            margin-top: 0px;
            width: 100%;
        }
    }
    .container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 55px;
        padding-top: 50px;
        height: auto !important;
        @media screen and (max-width: 1028px) {
            grid-template-columns: 1fr;
            padding: 20px 20px;
        }
    }
    .form-wrapper div {
        width: 100%;
    }
    .form-wrapper {
        max-width: 100%;
    }
    form {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 20px;
        padding: 10px 0;
        width: 100%;
    }
    form div {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 5px;
        width: 100%;
    }
    label {
        color: var(--sand);
    }
    input,
    textarea {
        width: 100%;
        background: rgba(17, 17, 17, 0.6);
        color: var(--lightgray);
        border: none;
        padding: 10px;
        border-radius: 5px;
        z-index: 1;
        box-shadow:
            rgba(0, 0, 0, 0.25) 0px 25px 50px -12px,
            0 0 0 0.15px var(--lightgray);
    }
    button {
        cursor: pointer;
        color: var(--verydarkgray);
        background-color: var(--sand);
        font-family: "peridot-pe-variable", sans-serif !important;
        font-variation-settings:
