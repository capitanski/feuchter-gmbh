---
const { product, pageLanguage } = Astro.props;
---

<div class="function">
    <div class="headline-and-title">
        <h2 id="h2">Funktionsweise</h2>
        <p class="headline-text">Beschreibung</p>
    </div>
    <div class="image-grid">
        {
            product.function.map((item) => {
                return (
                    <div class="grid-item">
                        <img src={item.img} alt="" />
                        <p class="grid-item-title">
                            {item.title[pageLanguage]}
                        </p>
                        <p class="grid-item-text">{item.text[pageLanguage]}</p>
                    </div>
                );
            })
        }
    </div>
</div>

<style>
    h2 {
        color: var(--sand);
        font-size: 1.4rem !important;
        margin: 0;
    }
    .headline-text {
        color: var(--lightgray);
        font-size: 0.9rem;
    }
    .function {
        display: grid;
        grid-template-columns: 1fr 3fr;
        margin: 50px auto;
        gap: 20px;
        @media screen and (max-width: 1028px) {
            grid-template-columns: 1fr;
            padding: 0 20px;
        }
    }
    .image-grid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        @media screen and (max-width: 1028px) {
            grid-template-columns: 1fr;
        }
    }
    .grid-item {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
    }
    .grid-item img {
        width: 100%;
        height: auto;
        border-radius: 20px;
    }
    .grid-item-title {
        color: var(--lightgray);
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 0;
    }
    .grid-item-text {
        color: var(--lightgray);
        font-weight: 300;
        font-size: 0.8rem;
    }
</style>
