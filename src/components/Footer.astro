---
// WICHTIG: Sowohl navlinks als auch MOBILE NAV LINKS muss das languages Prop erhalten!!!!!!
import Logo from "../assets/feuchter_gmbh_logo.svg";
import Menu from "../assets/Menu.svg";
import LangSwitcher from "./LangSwitcher.astro";
import { navLinks } from "@/content/navLinks";
import type { TranslatedNavigation } from "@/types";
import { buttonTranslations } from "@/content/translations";
const { languages, language } = Astro.props;
const links = navLinks[language as keyof TranslatedNavigation];
---

<nav id="footer">
  <div class="nav-inner">
    <div class="logo-and-legal">
      <img src={Logo.src} alt="" class="logo" loading="lazy" />
      <div class="links legal">
        <a href={`/${language}/legal/imprint`}
          >{buttonTranslations("impressum", language)}</a
        >
        <a href={`/${language}/legal/privacy`}
          >{buttonTranslations("datenschutz", language)}</a
        >
        <a href={`/${language}/legal/agbs`}
          >{buttonTranslations("agbs", language)}</a
        >
      </div>
    </div>

    <div class="links">
      <LangSwitcher langs={languages} />
      {
        links.map((link) => {
          return <a href={`/${language}/${link.to}`}>{link.text}</a>;
        })
      }
    </div>
    <div class="langswitcher-and-contact">
      <div class="contact-data">
        <p>+49 123456789</p>
        <p>office@feuchter.com</p>
        <p>Feuchter GmbH</p>
        <p>Innbruckstraße 10</p>
        <p>4780 Schärding AT</p>
      </div>
    </div>
  </div>
</nav>
<style>
  .logo {
    width: 100px;
    height: auto;
    z-index: 3;
    @media screen and (max-width: 767px) {
      width: 80px;
    }
  }
  .logo-and-legal {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    @media screen and (max-width: 820px) {
      align-items: center !important;
    }
  }
  .logo-and-legal a {
    width: 100%;
    text-align: left;
    @media screen and (max-width: 820px) {
      text-align: center;
    }
  }
  .links {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    gap: 15px;
  }
  .legal {
    align-items: flex-start;
    margin-top: 20px;
  }
  a {
    color: var(--lightgray);
    text-decoration: none;
    font-size: 0.6rem;
    font-weight: 300;
    transition: all 0.2s ease-in-out;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 2px;
    @media screen and (max-width: 767px) {
      font-size: 0.7rem;
    }
  }
  a:hover {
    color: var(--sand);
  }
  nav {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: var(--verydarkgray);
    transition: all 0.15s ease-in-out;
    padding: 100px 0;
    /*box-shadow: rgba(0, 0, 0, 0.25) 0px 25px 50px -12px;*/
    @media screen and (max-width: 767px) {
      padding: 3px 10px;
    }
  }
  .nav-inner {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    max-width: 1400px;
    padding: 15px;
    width: 100%;
    @media screen and (max-width: 820px) {
      flex-direction: column;
      align-items: center;
      gap: 50px;
      padding: 50px 0;
    }
  }
  .mobile-links {
    width: 100%;
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 20px;
    transition: all 0.3s cubic-bezier(0.405, 0.935, 0.625, 0.895);
    transform: translateY(0);
    position: absolute;
    top: 0;
    z-index: 1;
    height: 100vh;
    background: black;
    opacity: 1;
    @media screen and (max-width: 767px) {
      display: flex;
    }
  }
  .hidden {
    transform: translateY(-100vh);
    opacity: 0;
  }
  .contact-data {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 1px;
    @media screen and (max-width: 820px) {
      align-items: center;
    }
  }
  .contact-data p {
    list-style-type: none;
    color: var(--lightgray) !important;
    text-transform: uppercase;
    letter-spacing: 3px;
    font-size: 0.6rem;
    margin: 0 !important;
    @media screen and (max-width: 820px) {
      text-align: center;
    }
  }
</style>
