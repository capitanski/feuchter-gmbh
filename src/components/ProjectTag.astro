---
const { tagContent } = Astro.props;
---

<div class="project-tag">
    {tagContent}
</div>
<style>
    .project-tag {
        box-shadow:
            rgba(0, 0, 0, 0.25) 0px 25px 50px -12px,
            0 0 0 0.35px var(--verydarkgray);
        background: transparent;
        display: inline-flex;
        font-size: 0.6rem;
        border-radius: 20px;
        padding: 5px 15px;
    }
</style>
